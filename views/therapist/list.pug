extends ../layout

block content
    h1= title
    button(id='create_ther') Создать
    button(id='delete_ther') Удалить
    button(id='update_ther') Изменить
    table
        tr 
            th id
            th Имя
            th Телефон:
        each item in therapist
            tr
                td= item.id
                td= item.label
                td= item.phone 

    div#create_ther_popup.q-window
          div.q-window-block(style="width:400px;height:220px;margin:-150px 0 0 -400px")
            div.q-window-header Добавить клиента
              a#create_ther_popup_close(style="position: relative;left: 300px;") X 
            div.q-window-body.q-form
              div.q-window-filters-form
                div.q-form-data
                  label(for="inLabel") ФИО
                  input#inLabel(type="text")
                div.q-form-data
                  label(for="inPhone") Телефон
                  input#inPhone(type="text")
            div.q-buttons
              a#submit_create_ther Создать
              a#cancel_create_ther Отменить

    div#delete_ther_popup.q-window
          div.q-window-block(style="width:400px;height:220px;margin:-150px 0 0 -400px")
            div.q-window-header Удалить массаж
              a#delete_ther_popup_close(style="position: relative;left: 300px;") X 
            div.q-window-body.q-form
              div.q-window-filters-form
                div.q-form-data
                  label(for="inpId") ID
                  select#inpId
                    each item in therapist
                        option(value=item.id)= item.id 
            div.q-buttons
              a#submit_delete_ther Удалить
              a#cancel_delete_ther Отменить
          
    div#update_ther_popup.q-window
          div.q-window-block(style="width:400px;height:220px;margin:-150px 0 0 -400px")
            div.q-window-header Добавить клиента
              a#update_ther_popup_close(style="position: relative;left: 300px;") X 
            div.q-window-body.q-form
              div.q-window-filters-form
                div.q-form-data
                  label(for="UpId") ID
                  select#UpId
                    each item in therapist
                        option(value=item.id)= item.id
                div.q-form-data
                  label(for="#UpLabel") ФИО
                  input#UpLabel(type="text")
                div.q-form-data
                  label(for="UpPhone") телефон
                  input#UpPhone(type="text")
            div.q-buttons
              a#submit_update_ther Изменить
              a#cancel_update_ther Отменить