extends ../layout

block content
    h1= title

    button(id='create_order') Создать
    button(id='update_order') Редактировать
    button(id='delete_order') Удалить

    table
        tr 
            th Id
            th Статус
            th Клиент
            th Массаж
            th Сумма
        each item in orders
            tr
                td= item.id
                td= item.id_status
                td= item.id_client
                td= item.id_massage
                td= item.amount


    div#create_order_popup.q-window
          div.q-window-block(style="width:400px;height:220px;margin:-150px 0 0 -400px")
            div.q-window-header Создать заказ
              a#create_order_popup_close(style="position: relative;left: 300px;") X 
            div.q-window-body.q-form
              div.q-window-filters-form
                div.q-form-data
                  label(for="inpOrder_statuses") Статус заказа
                  select#inpOrder_statuses
                    each item in order_statuses 
                        option(value= item.id)= item.label
                div.q-form-data
                  label(for="inpClient") Клиент
                  select#inpClient
                    each item in clients 
                        option(value= item.id)= item.label
                div.q-form-data
                  label(for="inpmassage") Массаж
                  select#inpmassage
                    each item in massage 
                        option(value= item.id)= item.id
                div.q-form-data
                  label(for="inpAmount") Сумма
                  input#inpAmount(type="text")
            div.q-buttons
              a#submit_create_order Создать
              a#cancel_create_order Отменить
    
    div#delete_order_popup.q-window
          div.q-window-block(style="width:400px;height:220px;margin:-150px 0 0 -400px")
            div.q-window-header Удалить заказ
              a#delete_order_popup_close(style="position: relative;left: 300px;") X 
            div.q-window-body.q-form
              div.q-window-filters-form
                div.q-form-data
                  label(for="inpId") ID
                  select#inpId
                    each item in orders
                        option(value=item.id)= item.id 
            div.q-buttons
              a#submit_delete_order Удалить
              a#cancel_delete_order Отменить
        
    div#update_order_popup.q-window
          div.q-window-block(style="width:400px;height:220px;margin:-150px 0 0 -400px")
            div.q-window-header Изменть дополнительную услугу
              a#update_order_popup_close(style="position: relative;left: 300px;") X 
            div.q-window-body.q-form
              div.q-window-filters-form
                div.q-form-data
                  label(for="inpDelId") ID
                  select#inpDelId
                    each item in orders
                        option(value=item.id)= item.id
                div.q-form-data
                  label(for="inpDelstatus") Статус заказа
                  select#inpDelstatus
                    each item in order_statuses 
                        option(value= item.id)= item.label
                div.q-form-data
                  label(for="inpDelClient") Клиент
                  select#inpDelClient
                    each item in clients 
                        option(value= item.id)= item.label
                div.q-form-data
                  label(for="inpDelmassage") Массаж
                  select#inpDelmassage
                    each item in massage 
                        option(value= item.id)= item.id
                div.q-form-data
                  label(for="inpDelAmount") Сумма
                  input#inpDelAmount(type="text")
            div.q-buttons
              a#submit_update_order Изменить
              a#cancel_update_order Отменить